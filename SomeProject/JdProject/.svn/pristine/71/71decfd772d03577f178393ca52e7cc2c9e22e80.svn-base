    slideLeftLiArr[i].index = i;
    slideLeftLiArr[i].onmouseover = function () {
        slideRight.style.display = "none";
        for(var j=0;j<slideLeftinfoArr.length;j++){
            slideLeftinfoArr[j].style.display = "none";
        }
