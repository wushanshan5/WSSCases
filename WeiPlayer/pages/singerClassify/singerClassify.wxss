/* pages/singerClassify/singerClassify.wxss */
.wholeClass {
	z-index: 100;
	width: 20px;
	position: fixed;
	top: 0;
	right: 0;
	background: #fff;
}
.wholeClass>text {
	display: block;
	font-size: 15px;
	color: blue;
	padding: 0px 2px;
}
.wholeClass>text:focus {
	color: #fff;
	background: blue;
}
.classify-title {
	margin: 0 30px 0 10px;
	padding-left: 10px;
	line-height: 50px;
	border-bottom: 1px solid #aaa;
}
.classify-item {
	padding: 0 30px;
	width: 100%;
	box-sizing: border-box;
}
.classify-item>text {
	box-sizing: border-box;
	width: 33%;
	padding: 0 5px;
	display: inline-block;
	font-size: 16px;
	color: blue;
	line-height: 20px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
