view {
	box-sizing: border-box;
}
.hide {
	display: none !important;
}
/*  pic部分结束  */
	.pic {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 350rpx;
		background-size: 100% 100%;
		
	}
	.pic>view {
		width: 100%;
		height: 100%;
		background-color: rgba(255,255,255,0.5);
		
	}
/*  pic部分结束  */

/*  info部分开始  */
	.info {
		background: #fff;
		position: fixed;
		top: 350rpx;
		left: 0;
		width: 100%;
		height: 80rpx;
	}
	.info>text {
		box-sizing: border-box;
		text-align: center;
		display: inline-block;
		width: 33%;
		font-size: 18px;
		height: 100%;
		 line-height: 30rpx;  
		border-bottom: 2px solid #fff;
	}
	.current-info {
		color: #23B9DD;
		border-bottom: 2px solid #23B9DD !important;
	}
/*  info部分结束  */

/*  intro部分开始  */
	.intro {
		width: 100%;
		font-size: 17px;
		color: #444;
		padding: 50rpx;
	}
	.intro>view {
		text-indent: 2em;
		line-height: 30px;
	}
/*  intro部分结束  */

/*  list部分开始  */
.list {
	margin-top: 450rpx;
}
.song-item {
	margin: 0 auto;
	width: 80%;
	border-bottom: 1rpx solid #ddd;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	font-size: 18px;
	color: #444;
	line-height: 30px;
}
.song-item>view {
	color: #aaa;
	font-size: 15px;
}
/*  list部分结束  */

/*  intro部分开始  */
.intro {
	margin-top: 430rpx;
}
.intro>view {
	font-size: 18px;
	color: #333;
	line-height: 85rpx;
}
/*  intro部分结束  */

/*  information部分开始  */
.information {
	margin-top: 430rpx;
}
.information>view {
	line-height: 40rpx;
}
/*  information部分结束  */